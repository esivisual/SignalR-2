@{
    ViewData["Title"] = "سیات آموزشی";
}

<div class="text-center">
    <h1 class="display-4">خوش آمدید</h1>
    <p>وب سایت آموزشی خودتان</p>
</div>

<div class="card" id="ChatBox">
    <div class="card-header">
        <b>پشیبانی آنلاین</b>
    </div>
    <div id="MessagePanel">
        <ul id="Messages">
        </ul>
        <div id="SendNewMessage">
            <form id="NewMessageForm" class="row">
                <input id="MessageInput"
                       class="form-control col-md-8 col-sm-8"
                       placeholder="پیام خود را وارد نمایید..." />
                <button class="btn btn-success col-md-4 col-md-4">
                    ارسال
                </button>
            </form>
        </div>
    </div>
</div>